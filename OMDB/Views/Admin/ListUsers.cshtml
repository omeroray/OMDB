@model OMDB.Models.ListUsersModel
@{
    ViewBag.Title = "Kullanıcı Listesi";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Kullanıcı Listesi</h2>

<div class="panel-body">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <td>Adı</td>
                <td>Soyadı</td>
                <td>Kullanıcı Adı</td>
                <td>Mail Adresi</td>
                <td class="w40px"></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.User)
            {
                <tr>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.Username</td>
                    <td>@item.Email</td>
                    <td>@Html.ActionLink("Sil", "DeleteUser", new { id = item.Id }, new { @class = "btn btn-danger" })</td>
                </tr>
            }
        </tbody>
    </table>
</div>
