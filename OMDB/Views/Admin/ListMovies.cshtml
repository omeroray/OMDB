@model OMDB.Models.ListMoviesModel
@{
    ViewBag.Title = "Film Listesi";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Film Listesi</h2>

<div class="panel-body">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <td>Film Adı</td>
                <td>Vizyon Tarihi</td>
                <td>Süre</td>
                <td class="w40px"></td>
                <td class="w40px"></td>
                <td class="w40px"></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.MovieList)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.ReleaseDate.ToString("dd.MM.yyyy")</td>
                    <td>@item.Runtime</td>
                    <td>@Html.ActionLink("Aktörler", "ManageMovieActorRelation", new { id = item.Id }, new { @class = "btn btn-info" })</td>
                    <td>@Html.ActionLink("Düzenle", "UpdateMovie", new { id = item.Id }, new { @class = "btn btn-warning" })</td>
                    <td>@Html.ActionLink("Sil", "DeleteMovie", new { id = item.Id }, new { @class = "btn btn-danger" })</td>
                </tr>
            }
        </tbody>
    </table>
</div>
